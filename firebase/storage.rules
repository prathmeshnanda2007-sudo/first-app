rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow image uploads from authenticated users to 'images/' prefix
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Deny other writes by default
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
